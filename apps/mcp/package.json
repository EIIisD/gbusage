{
	"name": "@gbusage/mcp",
	"version": "17.1.7",
	"description": "MCP server implementation for gbusage data",
	"homepage": "https://github.com/ryoppippi/ccusage#readme",
	"bugs": {
		"url": "https://github.com/ryoppippi/ccusage/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ryoppippi/ccusage.git"
	},
	"funding": "https://github.com/ryoppippi/ccusage?sponsor=1",
	"license": "MIT",
	"author": "ryoppippi",
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./package.json": "./package.json"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"gbusage-mcp": "./src/index.ts"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "bun -b --watch ./src/index.ts",
		"format": "pnpm run lint --fix",
		"lint": "eslint --cache .",
		"prepack": "pnpm run build && clean-pkg-json",
		"prerelease": "pnpm run typecheck && pnpm run build",
		"start": "bun ./src/index.ts",
		"test": "TZ=UTC vitest",
		"typecheck": "tsgo --noEmit"
	},
	"dependencies": {
		"@gbusage/codex": "workspace:*",
		"@hono/mcp": "catalog:runtime",
		"@hono/node-server": "catalog:runtime",
		"@modelcontextprotocol/sdk": "catalog:runtime",
		"gbusage": "workspace:*",
		"gunshi": "catalog:runtime",
		"hono": "catalog:runtime",
		"nano-spawn": "catalog:runtime",
		"zod": "catalog:runtime"
	},
	"devDependencies": {
		"@gbusage/internal": "workspace:*",
		"@ryoppippi/eslint-config": "catalog:lint",
		"@typescript/native-preview": "catalog:types",
		"clean-pkg-json": "catalog:release",
		"eslint": "catalog:lint",
		"fs-fixture": "catalog:testing",
		"publint": "catalog:lint",
		"sort-package-json": "catalog:release",
		"tsdown": "catalog:build",
		"vitest": "catalog:testing"
	},
	"engines": {
		"node": ">=20.19.4"
	},
	"publishConfig": {
		"bin": {
			"gbusage-mcp": "./dist/index.js"
		},
		"exports": {
			".": "./dist/index.js",
			"./package.json": "./package.json"
		}
	},
	"devEngines": {
		"runtime": [
			{
				"name": "node",
				"onFail": "download",
				"version": "^24.11.0"
			},
			{
				"name": "bun",
				"onFail": "download",
				"version": "^1.3.2"
			}
		]
	}
}
